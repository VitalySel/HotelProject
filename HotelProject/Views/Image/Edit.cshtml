@model HotelProject.Models.Image

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование изображений</h2>

<h4>Изображения</h4>
<hr />
<div class="row">
<div class="col-md-4">
    <form asp-action="Edit" method="post" asp-controller="Image" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@ViewBag.ImageId" name="ImageId" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Продукт</label><br />
            @Html.DropDownListFor(model => model.ProductId, ViewBag.Products as SelectList)
        </div>
        <div class="form-group">
            <input type="file" name="uploadedFile" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

