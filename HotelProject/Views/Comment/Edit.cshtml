@model HotelProject.Models.Comment
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Редактирование комментария</title>
</head>
<body>
    <div>
        <h3>Редактор комментариев</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.CommentId" name="CommentId" />
            <fieldset>
                @Html.HiddenFor(m => m.Id)
                <p>
                    @Html.LabelFor(m => m.Feedback, "Комментарий")
                    <br />
                    @Html.EditorFor(m => m.Feedback)
                </p>
                <p>
                    @Html.LabelFor(m => m.Name, "Имя")
                    <br />
                    @Html.EditorFor(m => m.Name)
                </p>
                <p>
                    @Html.LabelFor(m => m.Surname, "Фамилия")
                    <br />
                    @Html.EditorFor(m => m.Surname)
                </p>
                <p>
                    @Html.LabelFor(m => m.Phone, "Телефон")
                    <br />
                    @Html.EditorFor(m => m.Phone)
                </p>
                <p>
                    @Html.LabelFor(m => m.Email, "Почта")
                    <br />
                    @Html.EditorFor(m => m.Email)
                </p>
                <p>
                    @Html.LabelFor(m => m.Rating, "Оценка")
                    <br />
                    @Html.EditorFor(m => m.Rating)
                </p>
                <p><input type="submit" value="Отправить" /></p>
            </fieldset>
        </form>
    </div>
</body>
</html>
