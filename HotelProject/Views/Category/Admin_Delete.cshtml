@model HotelProject.Models.Category
@{
    ViewData["Title"] = "Admin_Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Удаление</h2>
<div>
    <h4>Категория</h4>
        <dl class="dl-horizontal">
            <dt>Название категории: </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>Описание: </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>Изображение: </dt>
            <dd>
                <img src="@Url.Content(Model.Image)" />
            </dd>
        </dl>
        <form asp-action="Admin_Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </form>
</div>

<div>
    @Html.ActionLink("Категории", "Admin_Index")
</div>