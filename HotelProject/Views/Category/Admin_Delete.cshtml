@model HotelProject.Models.Category
@{
    ViewData["Title"] = "Admin_Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Удаление</h2>
<div>
    <h4>Категория</h4>
        <dl class="dl-horizontal">
            <dt>Название категории</dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>Описание</dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>Картинка</dt>
            <dd>
                @Html.DisplayFor(model => model.Image)
            </dd>
        </dl>
        <form asp-action="Admin_Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            <a asp-action="Admin_Index">Вернуться назад</a>
            <a asp-action="Index">Вернуться на главную</a>
        </form>
</div>
