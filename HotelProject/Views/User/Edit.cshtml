@model HotelProject.Models.User
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Редактирование пользователей</title>
</head>
<body>
    <div>
        <h3>Редактор пользователей</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.UserId" name="UserId" />
            <fieldset>
                @Html.HiddenFor(m => m.Id)
                <p>
                    @Html.LabelFor(m => m.Login, "Логин")
                    <br />
                    @Html.EditorFor(m => m.Login)
                </p>
                <p>
                    @Html.LabelFor(m => m.Password, "Пароль")
                    <br />
                    @Html.EditorFor(m => m.Password)
                </p>
                <p>
                    @Html.LabelFor(m => m.RoleId, "Роль")
                    <br />
                    @Html.EditorFor(m => m.RoleId)
                </p>
                <p><input type="submit" value="Отправить" /></p>
            </fieldset>
        </form>
    </div>
</body>
</html>

